<!DOCTYPE html>
<html>
  <head>
    <title>TodoList</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
  <a class="navbar-brand" href="/">Ruby Garage</a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item active">
        <%= link_to "Projects", projects_path, class:"nav-link" %>
      </li>
      <li class="nav-item active">
        <%= link_to "New Project", new_project_path, class:"nav-link" %>
      </li>
    </ul>
  </div>


    <form class="form-inline my-2 my-lg-0">
            
    <% if user_signed_in? %>

    Hello, <%= current_user.email %> | <%= link_to "Sign Out", destroy_user_session_path, method: :delete %></p>

    <% else %>

    <p><%= link_to "Sign In", new_user_session_path %> | <%= link_to "Sign Up", new_user_registration_path %> 

    <% end %>
    </form>
</nav>

    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

    <%= yield %>
  </body>
</html>
