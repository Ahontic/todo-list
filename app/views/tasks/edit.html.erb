<h1>Edit task</h1>

<%= form_for :task, url: project_task_path, method: :put do |f| %>
<% if @task && @task.errors.any? %>
  <ul>
    <% @task.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>
<p>

  <%= f.label :title %> <br/>
    <%= f.text_field :name %>
  </p>
  
  <%= f.submit "Modify" %>
<% end %>
  
<%= link_to 'Back', project_path(@project), class: "btn btn-link" %>